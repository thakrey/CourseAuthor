	<!-- Set up email SMTP connection -->
  	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
	    <property name="host" value="${lrn.smtp.host}" />
	    <property name="port" value="${lrn.smtp.port}" />
	</bean>  
  	<bean id="messageFactory" class="com.lrn.email.MessageFactory">
    	<property name="mailSender" ref="mailSender" />
    	<property name="from" value="${console.email.defaultFrom}" />
  	</bean>
  	
  	<!-- set up templating engine -->
  	<bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
    	<property name="velocityProperties">
	      	<props>
		        <prop key="resource.loader">class</prop>
		        <prop key="class.resource.loader.class">
		         	org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
		        </prop>
	      	</props>
    	</property>
  	</bean>  	
